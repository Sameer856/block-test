{
    "name": "arduino-block-ide",
    "version": "1.0.0",
    "main": "public/electron.js",
    "scripts": {
      "start:backend": "node backend/upload.js",
      "start:frontend": "cd frontend && npm start",
      "build:frontend": "cd frontend && npm run build",
      "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
      "dist": "npm run build:frontend && electron-builder"
    },
    "dependencies": {
      "@blockly/field-angle": "^6.0.2",
      "cors": "^2.8.5",
      "express": "^4.18.2"
    },
    "devDependencies": {
      "concurrently": "^9.2.0",
      "electron": "^27.1.2",
      "electron-builder": "^24.6.0",
      "electron-is-dev": "^3.0.1"
    },
    "build": {
      "appId": "com.robovision.arduinoide",
      "productName": "ArduinoBlockIDE",
      "files": [
        "frontend/build/**/*",
        "public/electron.js",    
        "backend/**/*"
      ],

      "directories": {
        "buildResources": "assets"
      },
   
      "mac": {
  "target": [
    {
      "target": "dmg",
      "arch": ["universal"]
    }
  ]
}

    }
  }
  