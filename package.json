{
    "name": "arduino-block-ide",
    "version": "1.0.0",
    "main": "electron/main.js",
    "description": "Blockly-based Arduino IDE",
    "author": "Robovision",
    "scripts": {
      "start": "cd frontend && npm start",
      "build": "cd frontend && npm run build",
      "electron": "electron .",
      "dist": "npm run build && electron-builder",
      "start:backend": "node backend/upload.js",
      "start:frontend": "cd frontend && npm start",
      "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\""
    },
    "build": {
      "appId": "com.robovision.arduinoide",
      "mac": {
        "category": "public.app-category.developer-tools",
        "target": [
          {
            "target": "dmg",
            "arch": ["arm64"]
          }
        ]
      },
      "dmg": {
        "format": "UDZO"
      },
      "directories": {
        "buildResources": "assets"
      },
      "files": [
        "frontend/build/**/*",
        "electron/**/*",
        "backend/**/*",
        "package.json"
      ],
      "extraResources": [
        {
          "from": "electron/cli",
          "to": "electron/cli"
        },
        {
          "from": "backend",
          "to": "backend"
        },
        {
          "from": "backend/node_modules",
          "to": "backend/node_modules"
        },
        {
          "from": "electron/node",
          "to": "node"
        }
      ]
    },
    "dependencies": {
      "@blockly/field-angle": "^6.0.2",
      "cors": "^2.8.5",
      "express": "^4.21.2"
    },
    "devDependencies": {
      "concurrently": "^9.2.0",
      "electron": "^29.0.0",
      "electron-builder": "^26.0.12"
    }
  }
  